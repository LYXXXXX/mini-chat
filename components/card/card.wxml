<view class="card">
    <view class="top" style="height: 660rpx;">
        <image lazy-load="{{true}}" src="{{card.src}}"
            style="width: 100%; height: 100%; border-top-left-radius: 10rpx; border-top-right-radius: 10rpx;"
            mode="aspectFill" />
    </view>
    <view class="bottom" style="height: 140rpx">
        <view class="bottom-top">
            <view style="font-size: 36rpx; color: #333333;">{{card.name}}</view>
            <view class="infomation">
                <!-- <view style="font-size: 28rpx; color: #999999; flex: 1;">{{card.sex}}</view> -->
                <view style="height: 38rpx; flex:1;"><image style="height: 100%; width: 100%;" mode="aspectFit" src="{{card.sex == 0 ? '../../images/sex/lady.png' : '../../images/sex/man.png'}}"></image></view>
                <view style="font-size: 28rpx; color: #999999; flex: 1; text-align: center;">{{card.age}}Â≤Å</view>
                <view style="font-size: 28rpx; color: #999999; flex: 1; text-align: center;">{{card.city}}</view>
            </view>
        </view>
        <view style="font-size: 28rpx; color: #999999;">{{card.desc}}</view>
    </view>
</view>