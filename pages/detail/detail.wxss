/* pages/detail/detail.wxss */

page {
    height: 100%;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.container {
    background-color: white;
    height: 100%;
    overflow: hidden;
    box-sizing: border-box;
}

.line {
    /* border: black solid 1px 1px; */
    background-color: black;
    width: 100%;
    padding: 1px 0;
    margin-top: 0px;
    box-sizing: border-box;
}

.line1 {
    width: 95%;
    padding: 1px 0;
    margin-top: 0px;
    background-color: black;
    box-sizing: border-box;
}

.centerView {
    width: 100%;
    display: flex;
    justify-content: center;
    box-sizing: border-box;
}

.containerView {
    width: 95%;
    height: 98%;
    margin: 30rpx 10rpx 0 10rpx;
    position: relative;
    background-color: #ffffff;
    box-sizing: border-box;
    border: 1rpx solid #f9f9f9;
    box-shadow: 0 2rpx 20rpx #999999;
    border-radius: 10rpx;
    box-sizing: border-box;
}

.topContainerView {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 0 15rpx 15rpx 15rpx;
}

/**
 * 头像样式
*/

.profileImage {
    width: 60rpx;
    height: 60rpx;
    border-radius: 30rpx;
}

/*头部显示名字和时间整体样式*/

.topRightView {
    margin-left: 15rpx;
    display: flex;
    flex-direction: column;
}

/*用户名称样式*/

.topRightName {
    font-size: 33rpx;
}

/*时间样式*/

.topRightTime {
    font-size: 24rpx;
    color: #b8b2b2;
    margin-top: 10rpx;
}

/* 中部样式 */

.centerContentView {
    width: auto;
    margin: 15rpx;
}

/* 文字 */

.centerContent {
    width: auto;
    display: -webkit-box;
    margin: 10rpx;
    font-size: 16px;
    /* color:#000000; */
    line-height: 40rpx;
    word-break: break-all;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
}

/* 图片 */

.largeBox {
    width: 100%;
    margin: 15rpx 10rpx;
}

.smallBox {
    width: 80%;
    margin: 15rpx 10rpx;
}

.centerImage {
    margin-right: 5px;
    text-align: center;
    border-radius: 8px;
}

.small {
    width: 215rpx;
    height: 215rpx;
}

.large {
    width: 330rpx;
    height: 330rpx;
}

.big {
    width: 97%;
}

.contentTop {
    height: 60rpx;
    margin: 15rpx;
}

.contentTopLeft {
    float: left;
    margin-left: 5px;
}

.contentTopRight {
    float: right;
    margin-right: 5px;
}

.contentMain {
    margin: 15rpx;
    box-sizing: border-box;
}

.contentBox {
    /* border: black solid 1px; */
    margin-top: 40rpx;
}

.contentTopView {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 15rpx;
}

.contentTopRight {
    /* display: flex; */
    margin-left: 15rpx;
}

.contentCenterView {
    width: 85%;
    padding-left: 80rpx;
}

.contentCheck {
    width: 100%;
    margin: 10rpx;
    display: flex;
    flex-direction: row;
}

.font {
    font-size: 30rpx;
    margin-right: 60rpx;
}

.blue {
    color: rgb(44, 89, 212);
}

/*底部view整体样式*/

.bottom {
    height: 5%;
    position: absolute;
    bottom: 20rpx;
    width: 100%;
    border-top: 2px solid black;
    background-color: white;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
}

/*每个Item样式*/

.bottomItemView {
    flex: 1;
    height: 35px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

/*Item样式中的图标样式 顶 踩 分享 评论*/

.bottomItemImage {
    width: 60rpx;
    height: 60rpx;
}

/*Item中的文字样式  顶 踩 分享 评论*/

.bottomItemText {
    font-size: 35rpx;
    color: #2c2b2b;
    margin-left: 20rpx;
}

.pop_bg {
    transition: 1s;
    background: black;
    opacity: 0.5;
    width: 100%;
    height: calc(100vh - 3.5rem);
    z-index: 9999999999;
    position: fixed;
    top: 0;
    left: 0;
}

.page_b_comment_box {
    transition: 1s;
    height: 3.5rem;
    background: #f0f0f0;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 99999999999999999;
}

.page_b_comment button text {
    font-size: 28rpx;
    color: #fff;
}

.page_b_comment button {
    transition: 1s;
    width: 150rpx;
    height: 80rpx;
    line-height: 80rpx;
    background: #009dda;
    border-radius: 8rpx;
    text-align: center;
    position: absolute;
    top: 16rpx;
    right: 20rpx;
    z-index: 99999999999;
}

.page_b_comment {
    position: relative;
}

.page_b_comment input {
    height: 2.8rem;
    line-height: 2.8rem;
    width: 65%;
    border-bottom: 1px solid #009dda;
    margin-left: 20rpx;
    font-size: 30rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.btn-hover {
    position: relative;
    top: 3rpx;
    border-radius: 20rpx;
    box-shadow: 0px 0px 8px rgb(231, 229, 229) inset;
}

/* 按钮 点击效果 */

.style {
    z-index: 10000;
    width: 100%;
}

.popup {
    display: flex;
    align-items: center;
    background: rgb(242, 242, 242, 1);
}

.input {
    width: 65%;
    height: 60rpx;
    display: block;
    margin: 30rpx auto;
    background: #fff;
}

.placeholderStyle {
    font-size: 26rpx;
    margin: 0 20rpx;
}

.button {
    display: block;
    height: 60rpx;
    width: 20%;
    line-height: 60rpx;
    text-align: center;
    font-size: 30rpx;
    box-shadow: 8rpx;
    color: #979797;
}