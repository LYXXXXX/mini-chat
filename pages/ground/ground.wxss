/* pages/ground/ground.wxss */
.container{
  background-color: white;
}
.TOP{
  background-color: aqua;
}

/*整体view样式*/
.containerView{
  padding: 15rpx 15rpx 15rpx 15rpx;
  margin: 10px 10px;
  position: relative;
  background-color: #ffffff;
  box-sizing: border-box;
  border: 1rpx solid #f9f9f9;
  box-shadow: 0 2rpx 20rpx #999999;
  border-radius: 10rpx;
}

/*头部整体样式*/
.topContainerView{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10rpx;
}

/**
 * 头像样式
*/

.profileImage{
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}
/*头部显示名字和时间整体样式*/
.topRightView{
  margin-left: 15rpx;
  display: flex;
  flex-direction: column;
}
/*用户名称样式*/
.topRightName{
  font-size: 33rpx;
}
/*时间样式*/
.topRightTime{
  font-size: 24rpx;
  color: #b8b2b2;
  margin-top: 10rpx;
}
/* 举报按钮样式 */
.topRightReport{
  color: rgb(214, 214, 214);
  position: absolute;
  font-size: 30rpx;
  right: 20px
}

/* 中部样式 */
.centerContentView{
  padding-left: 75rpx;
  padding-right: 60rpx;
  width: 85%;
}
/* 文字 */
.centerContent{
  width: 95%;
  display: -webkit-box;
  margin-bottom: 10rpx;
  /* font-size:28rpx; */
  /* color:#000000; */
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow:ellipsis;
}
.mask{
  -webkit-line-clamp:2;
} 

/* 图片 */
.largeBox{
  width: 100%;
}
.smallBox{
  width: 600rpx;
}
.centerImage{
  margin-right: 4px;
  text-align: center;
  border-radius: 8px;
}

.small{
  width: 180rpx;
  height: 180rpx;
}
.large{
  width: 270rpx;
  height: 270rpx;
}

/*底部view整体样式*/
.bottomView{
  display: flex;
  flex-direction: row;
  /* justify-content: space-between; */
  direction: rtl;
}
/*每个Item样式*/
.bottomItemView{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 18rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
/*Item样式中的图标样式 顶 踩 分享 评论*/
.bottomItemImage{
  width: 45rpx;
  height: 45rpx;
}
/*Item中的文字样式  顶 踩 分享 评论*/
.bottomItemText{
  font-size: 23rpx;
  color: #b8b2b2;
  margin-left: 10rpx;
  margin-top: 8rpx;
}

/*分割线样式*/
.divLine{
  background: #f3f3f3;
  /* margin-top: 10px; */
  width: 100%;
  height: 4px;
}