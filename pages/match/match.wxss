.btn-area{
  display: flex;
  align-items: center;
  height: 60rpx;
}

.card-swipe{
  position: relative;
  top: 5%;
  width: 100%;
  height: 900rpx;
}

.rm-card{
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
  background-color: #F08080;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  border-radius: 50%;
  margin-left: 10rpx;
  font-size: 18rpx;
}

.disable{
  background-color: #f3f3f3;
  color: #000000;
  pointer-events: none;
}

.label{
  white-space: nowrap;
  color: #666666;
}

.success{
  color: #07c160;
}

.danger{
  color: #F08080;
}

/* 关闭按钮样式 */
.close-btn{
  position: relative;
  bottom: 40rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 150;
}

/* 整体  上下滑动盒子样式 */
.detailBox{
  width: 100%;
  display: flex;
  align-items: center;
  
}

/* 第一部分 整体 */
.topBox{
  display: block;
  width: 100%;
  height: 220px;
  margin-bottom: 10rpx;
  box-sizing: border-box;
}

/* 第一部分 轮播图样式 */
.swiper{
  width: 100%;
  height: 100%;
  text-align: center;
}

/* 第一部分 图片样式 */
.topBox .topBoxImg{
  width: 90%;
  height: 95%;
  margin-top: 10rpx;
  box-sizing: border-box;
  
}

/* 卡片样式 */
.card_style{
  border: 1rpx solid #f9f9f9;
  box-shadow: 0 2rpx 20rpx #999999;
  border-radius: 10rpx;
  background-color: #ffffff;
  box-sizing: border-box;
}

/* 第二部分 整体 */
.centerBox{
  display: block;
  width: 100%;
  height: 100px;
  margin-bottom: 10rpx;
}

/* 第二部分 信息样式 */
.userInfo{
  width: 90%;
  height: 95%;
  margin: 0 auto;
  display: flex;
  
}

/* 第二部分 左侧大盒子 */
.centerBoxLeft{
  width: 90px;
  height: 100%;
  border-radius: 10rpx;
  border: 1rpx solid #f9f9f9;
  background-color: #ffffff;
  box-sizing: border-box;
}

/* 第二部分 左侧头像盒子 */
.centerBoxLeft-avatar{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

/* 第二部分 右侧大盒子 */
.centerBoxRight{
  flex: 1;
  width: auto;
  height: 100%;
  border-radius: 10rpx;
  border: 1rpx solid #f9f9f9;
  background-color: white;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* 第二部分 右侧每行盒子 */
.sonOfRightBox{
  flex: 1;
  width: 100%;
  display: flex;
  align-items: center;

}

/* 第二部分 右侧每个小盒子 */
.sonOfRightBox .text{
  margin-left: 30rpx;
  font-size: 32rpx;
  flex: 1;
  }

  /* 第三部分 整体 */
  .bottomBox{
    display: block;
    width: 100%;
    height: auto;
    margin-bottom: 10rpx;
  }

  /* 第三部分 大盒子 */
  .bottomBigBox{
    width: 90%;
    height: 95%;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
  }

  /* 第三部分 小盒子 */
  .BottomLittleBox{
    flex:1;
    width: 100%;
    height: auto;
    margin: 10rpx auto;
    box-sizing: border-box;

  }

  /* 第三部分 标题盒子样式 */
  .LeftOfBottomLittleBox{
    width: 30%;
    height: 100%;
    line-height: 60rpx;
    text-align: center;
    background-color: sandybrown;
    border-radius: 10rpx 10rpx 0 0;
  }

  /* 第三部分 文本盒子 */
  .textOfBottom{
    width: 100%;
    height: 100%;
    padding: 20rpx 0;
    background-color: skyblue;
    border-radius: 0 10rpx 10rpx 10rpx;
    box-sizing: border-box;
    box-shadow: 0 2rpx 20rpx #999999;
  }

  /* 第三部分 文本样式 */
  .textStyle{
    width: 95%;
    margin-left: 28rpx;
    overflow:hidden
  }
/* 兴趣爱好标签 */
  .hobbies{
    float: left;
    margin: 10rpx;
    padding: 15rpx;
    border-radius: 10rpx;
    box-sizing: border-box;
    box-shadow: 0 1rpx 10rpx #39e0ec;

  }
